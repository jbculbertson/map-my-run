{{#each runs as |run|}}
<div class="panel panel-default">
  <div class="panel-heading"><i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>
           <strong>{{run.ownerName}}</strong> ran <strong>{{run.distance}}</strong> miles on <strong>{{#formatDate run.date}}
           {{/formatDate}}</strong></div>
  <table class="table">
    <tr>
     <th><i class="fa fa-road fa-2x" aria-hidden="true"></i></th>
     <th><i class="fa fa-clock-o fa-2x" aria-hidden="true"></i></th>
     <th><i class="fa fa-tachometer fa-2x" aria-hidden="true"></i></th>
     <th><i class="fa fa-cog fa-2x" aria-hidden="true"></i></th>
   </tr>
    <tr>
     <td><h4><strong>{{run.distance}}</strong></h4></td>
     <td><h4><strong>{{run.timeTaken}}</strong></h4></td>
     <td><h4><strong>{{run.avgPace}}</strong></h4></td>
     <td><button class="btn btn-success btn-sm" id="show-one-run" data-id="{{run._id}}"
     data-toggle="modal" data-target="#show-run-modal">
       <i class="fa fa-map-marker"></i> Map</button></td>
   </tr>
    <tr>
     <td><h6>DISTANCE (MI)</h6></td>
     <td><h6>MINUTES</h6></td>
     <td><h6>AVERAGE PACE</h6></td>
     <td></td>
   </tr>
  </table>
  <button class="btn btn-default btn-sm" id="like-run" data-id="{{run._id}}">
  <i class="fa fa-thumbs-o-up fa-2x"></i>  {{run.likes.length}}</button>
</div>
{{/each}}
